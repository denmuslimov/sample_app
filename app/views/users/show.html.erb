<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<dir>Current time is <%= Time.now %></dir>


<dir>Account was created at <%= @user.created_at %></dir>
<dir>Account was updated at <%= @user.updated_at %></dir>

<p><%= @user.email %></p>
